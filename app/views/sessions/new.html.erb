<div class="w-100 d-flex flex-column align-items-center my-5">

<h1 class="mb-5 text-center">Log In</h1>

<%= form_with(scope: :session, url: login_path, local: true) do |f| %>
  <div class="card align-items-center shadow" style="width: 18rem;">
    <ul class="list-group list-group-flush">
      <li class="list-group-item">
        <%= f.label :email %><br>
        <%= f.email_field :email %>
      </li>
      <li class="list-group-item">
        <%= f.label :password %><br>
        <%= f.password_field :password %>
      </li>
    </ul>
    <div class="w-100 card-footer d-flex flex-nowrap justify-content-evenly">
      <%= f.submit "Log in", :class => "btn btn-outline-success" %>
      <%= link_to 'Cancel', articles_path, :class => "btn btn-outline-danger"  %>
    </div>
  </div>
<% end %>

<p class='mt-3'><%= link_to 'No Account? Click here to sign up for free.', signup_path, class: 'text-decoration-none' %></p>
</div>