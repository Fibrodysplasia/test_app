<div> 
  <h1 class="">Article Details:</h1><br>
  
  <div class="col-sm-4">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title fw-bolder"><%= @article.title %></h5><hr>
        <p class="card-text"><%= @article.description %></p>
        <div class="card-footer d-flex flex-nowrap justify-content-evenly">
          <%= link_to 'Edit', edit_article_path(@article), :class => "btn btn-outline-warning" %>
          <%= button_to 'Destroy', article_path(@article), method: :delete, :class =>"btn btn-outline-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>