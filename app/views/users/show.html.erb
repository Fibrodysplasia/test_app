<div class='w-100 d-flex flex-column align-items-center my-5'>

<h1 class='mb-5 text-center'><%= @user.username %></h1>

<%= gravatar_for @user, size: 200 %>

<%= link_to 'Edit Your Profile', edit_user_path(@user),class: 'mt-3 btn btn-outline-success' %>

<h3 class='mt-5 text-center'>Articles</h3>

<div class='container d-flex flex-column align-items-center'>
  <div class='page_info'>
    <%= page_entries_info @articles %>
  </div>
  <%= will_paginate @articles, :container => false %>
</div>

<%= render 'articles/article' %>

